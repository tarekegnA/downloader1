    <script>
			window.addEventListener('DOMContentLoaded', function () {
				(function ($) {
					$(document).ready(function () {
						const urlContainerSelector = '#dit-fallback';
						const
							i357Show = true,
							text1 = 'Having trouble with the download?<br/>Click here to download the file directly.',
							text2 = 'Having trouble accessing the content?<br/>Click here to try again.',
                            text3 = 'Having trouble with the download?<br/>Click here to try again.'
						;
						let isDlm = false, fallbackUrl = '', isDirectInternal = false;

						function showFallbackUrl() {
							const anchorEl = $(urlContainerSelector + ' a');

							const anchorText = isDlm ? text1 : (isDirectInternal ? text3 : text2);
							anchorEl.html(anchorText);

							anchorEl.attr('href', fallbackUrl);
							$('.pbar-loader, .pbar-label').hide();
							$(urlContainerSelector).removeClass('d-none');
						}

						$('body').on('dlurl-loaded', function (e, data) {
							if (!data.success || !data.data) return;

							isDlm = data.data.isDlm;
							isDirectInternal = data.data.isDirectInternal;
							fallbackUrl = data.data.fallbackUrl;

							if (i357Show) {
								showFallbackUrl();
								return;
							}

							if (!isDlm) return;

							setTimeout(showFallbackUrl, 3000);
						});

						
						$('a[data-altdl="true"]').each(function () {
							const el = $(this);

							if (el.attr('data-altdl').trim() === '') return;

							fallbackUrl = el.attr('href');

							showFallbackUrl();
						});
					});
				})(jQuery)
			});
    </script>

